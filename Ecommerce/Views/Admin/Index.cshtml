@model List<Product>
@{
    <div class="cont">
        <h1>Products List</h1>
        <a asp-controller="Admin" asp-action="Create">
            <button type="button" class="btn btn-primary">Create New</button>
        </a>
    </div>
    <table>
        
        <th>ProductID</th>
        <th>Name</th>
        <th>Price</th>
       
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.ProductID</td>

                    <td>@i.Name</td>

                    <td>@i.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-productID="@i.ProductID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-action="Delete" asp-route-productID="@i.ProductID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
