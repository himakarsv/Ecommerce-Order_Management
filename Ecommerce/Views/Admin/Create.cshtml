@model Product
@await Html.PartialAsync("_Alerts")

<div class="flex justify-center items-start min-h-screen bg-gray-100 py-10">
    <div class="w-full max-w-lg bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-semibold mb-6 text-gray-800">Create Product</h1>

        <form method="post" class="space-y-6">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Name" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Price" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Price" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Price" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex space-x-4">
                <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition">Submit</button>

                <a asp-controller="Admin" asp-action="Index" class="inline-block bg-gray-300 text-gray-800 px-6 py-2 rounded-md hover:bg-gray-400 transition">
                    Go Back
                </a>
            </div>

            <div>
                <span asp-validation-summary="ModelOnly" class="text-red-600"></span>
                @Html.ValidationSummary(false, "", new { @class = "text-red-600" })
            </div>
        </form>
    </div>
</div>
