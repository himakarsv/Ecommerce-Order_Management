@model List<Ecommerce.Models.Cart>
@await Html.PartialAsync("_Alerts")

<div class="max-w-4xl mx-auto p-6">
    <h2 class="text-3xl font-semibold mb-6 text-gray-800">Your Cart</h2>

    @if (!Model.Any())
    {
        <p class="text-gray-600">Your cart is empty.</p>
    }
    else
    {
        <div class="overflow-x-auto bg-white rounded-lg shadow">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@item.Product.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">₹@item.Product.Price</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@item.Quantity</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">₹@(item.Quantity * item.Product.Price)</td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                <a asp-action="IncreaseQuantity" asp-route-cartId="@item.CartId" class="inline-block px-2 py-1 bg-green-500 text-white rounded hover:bg-green-600">+</a>
                                <a asp-action="DecreaseQuantity" asp-route-cartId="@item.CartId" class="inline-block px-2 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600">-</a>
                                <a asp-action="Remove" asp-route-cartId="@item.CartId" class="inline-block px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-6 text-right">
                <form asp-controller="Order" asp-action="PlaceOrder" method="post">
                    <button type="submit" class="inline-block px-6 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700">Place Order</button>
                </form>
            </div>
        </div>
    }
</div>
