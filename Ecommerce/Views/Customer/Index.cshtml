@model List<Product>
@{
    <div class="cont">
        <h1>Products List</h1>
    </div>
    <table>

        <th>ProductID</th>
        <th>Name</th>
        <th>Price</th>

        <tbody>
            @foreach (var i in Model)
            {
                <tr>

                    <td>@i.Name</td>

                    <td>@i.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Cart" asp-action="Add" asp-route-productID="@i.ProductID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Add to Cart
                            </a>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Customer" asp-action="BuyNow" asp-route-productID="@i.ProductID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Buy Now
                                </a>
                                
                            </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
