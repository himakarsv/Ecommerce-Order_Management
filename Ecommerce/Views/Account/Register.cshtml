@using Ecommerce.ViewModels
@model Ecommerce.ViewModels.RegisterViewModel
@await Html.PartialAsync("_Alerts")

<div class="flex justify-center items-center min-h-screen bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-3xl font-extrabold text-center mb-8 text-gray-900">Register</h2>

        <form asp-action="Register" method="post" class="space-y-6">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <br />
                <input asp-for="Name" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <br />
                <span asp-validation-for="Name" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <br />
                <input asp-for="Email" type="email" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <br />
                <span asp-validation-for="Email" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <br />
                <input asp-for="Password" type="password" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <br />
                <span asp-validation-for="Password" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <br />
                <input asp-for="ConfirmPassword" type="password" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <br />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Role" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <br />
                <select asp-for="Role" class="w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option>Customer</option>
                </select>
                <br />
                <span asp-validation-for="Role" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white py-3 rounded-md hover:bg-green-700 transition">Register</button>

            <p class="text-center text-gray-600 mt-6 text-sm">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="text-blue-600 hover:underline">Login</a>
            </p>
        </form>
    </div>
</div>

