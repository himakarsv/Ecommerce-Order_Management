<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Ecommerce</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Fixed missing quote -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.2/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />

    <style>
        /* Make body a flex container for sticky footer */
        body, html {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1 0 auto; /* Grow to fill available space */
        }

        footer.footer {
            flex-shrink: 0; /* Prevent footer from shrinking */
        }

        /* Hero Section styling */
        .hero {
            background: url('/images/hero-bg.jpg') no-repeat center center/cover;
            height: 60vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-shadow: 1px 1px 5px rgba(0,0,0,0.7);
        }
    </style>
</head>
<body>
    <header>
        @{
            var role = Context.Session.GetString("Role");
            var email = Context.Session.GetString("Email");
        }

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Ecommerce</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (!string.IsNullOrEmpty(role))
                        {
                            if (role == "Customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Customer" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Customer" asp-action="Orders">Orders</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Orders">All Orders</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="CreateAdmin" class="btn btn-warning">Create Admin</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(role))
                    {
                        <span class="navbar-text text-white me-3">
                            Welcome, @email (@role)
                        </span>
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero mb-5">
        <div class="text-center px-4">
            <h1 class="display-4 text-black fw-bold">Welcome to Ecommerce Platform</h1>
            <p class="lead text-black ">Your one-stop shop for everything tech!</p>
             @* <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mt-3">Get Started</a> *@
        </div>
    </section>

    <main role="main" class="container pb-4">
        @RenderBody()
    </main>

    <footer class="footer bg-dark text-light text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - Ecommerce | Built with ASP.NET MVC
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



