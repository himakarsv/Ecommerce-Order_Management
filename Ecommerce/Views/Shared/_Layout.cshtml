<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" /> <!-- ✅ Add this -->
</head>
<body>
    <header>
        @{
            var role = Context.Session.GetString("Role");
            var email = Context.Session.GetString("Email");
        }

        <!-- 🌐 Modern Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Ecommerce</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (!string.IsNullOrEmpty(role))
                        {
                            if (role == "Customer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Customer" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Customer" asp-action="Orders">Orders</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Orders">All Orders</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(role))
                    {
                        <span class="navbar-text text-white me-3">
                            Welcome, @email (@role)
                        </span>
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- ✨ Hero Section -->
    @* <section class="hero"> *@
    @*     <div class="hero-text text-center text-white"> *@
    @*         <h1>Welcome to Ecommerce Platform</h1> *@
    @*         <p>Your one-stop shop for everything tech!</p> *@
    @*     </div> *@
    @* </section> *@

    <div class="container mt-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-light text-center py-3">
        <div class="container">
            &copy; 2025 - Ecommerce | Built with ASP.NET MVC
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
